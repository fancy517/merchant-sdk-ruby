= api_form_for @get_express_checkout_details, :url => merchant_path(:get_express_checkout_details) do |f|
  .row
    .span5
      %legend Get express checkout
      = f.input :Token

  .form-actions
    = f.submit "Submit", :class => "btn btn-primary", :data => { :disable_with => "Processing.." }

- if @get_express_checkout_details_response
  = render 'api_response', :request => @get_express_checkout_details, :response => @get_express_checkout_details_response
